{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form, {attr: {class: 'ajax-comment-form', action: formActionUrlVal } })  }}
{#    {{ form_widget(form) }}#}
    {% if form_errors(form) %}
        <div class="alert alert-danger">{{ form_errors(form) }}}</div>
    {% endif %}
    {{ form_row(form.comment_text, { attr: { placeholder: 'Type your comment here...' } , label_attr: {hidden: true} }) }}
    {{ form_row(form.author_id_hidden, {attr: {value: comment_author_id } }) }}
    {{ form_row(form.place_id_hidden, {attr: {value: comment_place_id } }) }}

    <div class="form-group text-right">
        <button class="btn btn-sm btn-success">{{ button_label|default('Add your comment') }}</button>
    </div>
{{ form_end(form) }}
